<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#97FFFBF1"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="AnimalBook"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_height="300px"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="25dp"
            android:elevation="4dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:onClick="pngum"
                android:id="@+id/penguin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pnguin"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:elevation="4dp"
            >
            <ImageView
                android:onClick="lionSound"
                android:id="@+id/lion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lion"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/sceond"
        android:layout_height="300px"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="25dp"
            android:elevation="20dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:onClick="tiger"
                android:id="@+id/tiger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tiger"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:elevation="4dp"
            >
            <ImageView
                android:onClick="horse"
                android:id="@+id/horse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/horse"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/third"
        android:layout_height="300px"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="25dp"
            android:elevation="4dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:onClick="chimpanzee"
                android:id="@+id/chimpanzee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/chimpanzee"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:elevation="4dp"
            >
            <ImageView
                android:onClick="peacock"
                android:id="@+id/peacock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/peacock"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/fourth"
        android:layout_height="300px"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="25dp"
            android:elevation="4dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:onClick="raven"
                android:id="@+id/raven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/raven"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            >
            <ImageView
                android:onClick="crow"
                android:id="@+id/crow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/crow"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>





</LinearLayout>